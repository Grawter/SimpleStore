@using Microsoft.AspNetCore.Mvc.Localization
@inject IViewLocalizer Localizer
@model SimpleStore.ViewModels.Authentication.LoginViewModel

@{
    ViewBag.Title = "Аутентификация";
}

<h3>@Localizer["Title"]</h3>

<form method="post" asp-controller="Account" asp-action="Login">
    <input type="hidden" asp-for="FullPath" value="@Model.FullPath" />
    <div asp-validation-summary="ModelOnly"></div>
    <div class="form-group col-md-3">
        <label asp-for="Email"></label><br />
        <input class="form-control" asp-for="Email" />
        <span asp-validation-for="Email"></span>
    </div>
    <div class="form-group col-md-3">
        <label asp-for="Password"></label><br />
        <input class="form-control" asp-for="Password" />
        <span asp-validation-for="Password"></span>
    </div>
    <div class="form-group col-md-5">
        <label asp-for="RememberMe"></label>
        <input asp-for="RememberMe" />
    </div>
    <div class="form-row">
        <div class="form-group col-md-2">
            <input class="btn btn-outline-dark form-control" type="submit" value="@Localizer["Login"]" />
        </div>
        <div class="form-group col-md-2">
            <a class="btn btn-outline-secondary form-control" asp-controller="Home" asp-action="Index">@Localizer["Back"]</a>
        </div>     
    </div>   
</form>