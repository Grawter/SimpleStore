@using Microsoft.AspNetCore.Mvc.Localization
@inject IViewLocalizer Localizer
@model SimpleStore.ViewModels.User.UserChangePassViewModel

@if (User.Identity.IsAuthenticated)
{
    ViewBag.Title = "Изменение пароля";

    <div>
        <h3>@Localizer["Title"] @Model.Email</h3>
    </div>
    
    <form asp-action="ChangePassword" asp-controller="Home">
        <div asp-validation-summary="ModelOnly"></div>

        <input type="hidden" asp-for="Id" />
        <input type="hidden" asp-for="Email" />
        <div class="form-group col-md-4">
            <label asp-for="OldPassword"></label>
            <input type="text" asp-for="OldPassword" class="form-control" />
            <span asp-validation-for="OldPassword"></span>
        </div>
        <div class="form-group col-md-4">
            <label asp-for="NewPassword"></label>
            <input asp-for="NewPassword" class="form-control" />
            <span asp-validation-for="NewPassword"></span>
        </div>
        <div class="form-group col-md-4">
            <label asp-for="ConfirmNewPassword" class="control-label"></label>
            <input asp-for="ConfirmNewPassword" class="form-control" />
            <span asp-validation-for="ConfirmNewPassword"></span>
        </div>
        <div class="form-row">
            <div class="form-group col-md-2">
                <input class="btn btn-outline-dark form-control" type="submit" value="@Localizer["Save"]" />
            </div>
            <div class="form-group col-md-2">
                <a class="btn btn-outline-secondary form-control" asp-action="Settings">@Localizer["Back"]</a>
            </div>
        </div>
    </form>
}

@section scripts{
    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
}