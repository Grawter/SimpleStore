@model SimpleStore.ViewModels.User.UserEditDataViewModel

@{
    ViewBag.Title = "Редактирование пользователя";
}

<h2>Изменения данных пользователя</h2>

<form asp-action="EditData" asp-controller="Home">
    <div asp-validation-summary="All" class="text-danger"></div>
    <div class="form-group">
        <input type="hidden" asp-for="Id" />
    </div>
    <div>
        <label asp-for="Name"></label><br />
        <input asp-for="Name" />
        <span asp-validation-for="Name"></span>
    </div>
    <div>
        <label asp-for="SurName"></label><br />
        <input asp-for="SurName" />
        <span asp-validation-for="SurName"></span>
    </div>
    <div>
        <label asp-for="Address"></label><br />
        <textarea asp-for="Address"></textarea>
        <span asp-validation-for="Address"></span>
    </div>
    <div>
        <label asp-for="PhoneNumber"></label><br />
        <input asp-for="PhoneNumber" />
        <span asp-validation-for="PhoneNumber"></span>
    </div>
    <div>
        <label asp-for="Day"></label><br />
        <input asp-for="Day" />
        <span asp-validation-for="Day"></span>
    </div>
    <div>
        <label asp-for="Mount"></label><br />
        <input asp-for="Mount" />
        <span asp-validation-for="Mount"></span>
    </div>
    <div>
        <label asp-for="Year"></label><br />
        <input asp-for="Year" />
        <span asp-validation-for="Year"></span>
    </div>
    <div class="form-group">
        <input type="submit" value="Сохранить" class="btn btn-outline-secondary" />
    </div>
    <div>
        <a asp-action="Settings">Назад</a>
    </div>
</form>

@section scripts{
    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
}