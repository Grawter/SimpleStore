@model SimpleStore.ViewModels.User.UserChangeEmailViewModel

@{
    ViewBag.Title = "Изменение электронного адреса";
}

<h2>Изменение электронного адреса для пользователя @Model.FullName</h2>

<form asp-action="ChangeEmail" asp-controller="Home">
    <div asp-validation-summary="All" class="text-danger"></div>
    <input type="hidden" asp-for="Id" />
    <input type="hidden" asp-for="FullName" />
    <div class="form-group">
        <label asp-for="Email" class="control-label"></label>
        <input asp-for="Email" class="form-control" />
        <span asp-validation-for="Email"></span>
    </div>
    <div class="form-group">
        <input type="submit" value="Сохранить" class="btn btn-outline-dark" />
    </div>
    <div>
        <a asp-action="Settings">Назад</a>
    </div>
</form>

@section scripts{
    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
}