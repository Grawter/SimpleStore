@using Microsoft.AspNetCore.Mvc.Localization
@inject IViewLocalizer Localizer
@model SimpleStore.ViewModels.User.UserChangeEmailViewModel

@if (User.Identity.IsAuthenticated)
{
    ViewBag.Title = "Изменение электронного адреса";

    <div>
        <h3>@Localizer["Title"] @Model.FullName</h3>
    </div>

    <form asp-action="ChangeEmail" asp-controller="Home">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <input type="hidden" asp-for="Id" />
        <input type="hidden" asp-for="FullName" />
        <div class="form-group col-md-5">
            <label asp-for="Email"></label>
            <input asp-for="Email" class="form-control" />
            <span asp-validation-for="Email"></span>
        </div>
        <div class="form-row">
            <div class="form-group col-md-2">
                <input class="btn btn-outline-dark form-control" type="submit" value="@Localizer["Save"]" />
            </div>
            <div class="form-group col-md-2">
                <a class="btn btn-outline-secondary form-control" asp-action="Settings">@Localizer["Back"]</a>
            </div>
        </div>
    </form>
}

@section scripts{
    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
}