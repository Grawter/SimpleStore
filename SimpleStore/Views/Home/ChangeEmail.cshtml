@using Microsoft.AspNetCore.Mvc.Localization
@inject IViewLocalizer Localizer
@model SimpleStore.ViewModels.User.UserChangeEmailViewModel

@if (User.Identity.IsAuthenticated)
{
    ViewBag.Title = "Изменение электронного адреса";

    <h3>@Localizer["Title"] @Model.FullName</h3>

    <form asp-action="ChangeEmail" asp-controller="Home">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <input type="hidden" asp-for="Id" />
        <input type="hidden" asp-for="FullName" />
        <div class="form-group">
            <label asp-for="Email" class="control-label"></label>
            <input asp-for="Email" class="form-control col-xl-3" />
            <span asp-validation-for="Email"></span>
        </div>
        <div class="form-group">
            <input class="btn btn-outline-dark" type="submit" value="@Localizer["Save"]" />
            <a class="btn btn-outline-secondary" asp-action="Settings">@Localizer["Back"]</a>
        </div>
    </form>
}

@section scripts{
    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
}