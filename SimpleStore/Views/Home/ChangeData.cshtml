@using Microsoft.AspNetCore.Mvc.Localization
@inject IViewLocalizer Localizer
@model SimpleStore.ViewModels.User.UserEditDataViewModel

@{
    ViewBag.Title = "Редактирование пользователя";
}

<div>
    <h3>@Localizer["Title"]</h3>
</div>

<form asp-action="ChangeData" asp-controller="Home">
    <div asp-validation-summary="ModelOnly"></div>
    <div class="form-group">
        <input type="hidden" asp-for="Id" />
    </div>
    <div class="form-group col-md-5">
        <label asp-for="FullName"></label><br />
        <input class="form-control" asp-for="FullName" />
        <span asp-validation-for="FullName"></span>
    </div>
    <div class="form-group col-md-5">
        <label asp-for="Address"></label><br />
        <textarea class="form-control" asp-for="Address"></textarea>
        <span asp-validation-for="Address"></span>
    </div>
    <div class="form-group col-md-5">
        <label asp-for="PhoneNumber"></label><br />
        <input class="form-control" asp-for="PhoneNumber" />
        <span asp-validation-for="PhoneNumber"></span>
    </div>
    <div class="form-group col-md-5">
        <label asp-for="DateBirth"></label><br />
        <input class="form-control" type="date" asp-for="DateBirth" />
        <span asp-validation-for="DateBirth"></span>
    </div>
    <div class="form-row">
        <div class="form-group col-md-2">
            <input class="btn btn-outline-dark form-control" type="submit" value="@Localizer["Save"]" />
        </div>
        <div class="form-group col-md-2">
            <a class="btn btn-outline-secondary form-control" asp-action="Settings">@Localizer["Back"]</a>
        </div>
    </div>
    
</form>

@section scripts{
    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
}