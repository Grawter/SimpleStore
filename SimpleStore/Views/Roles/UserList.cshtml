@model IEnumerable<SimpleStore.Models.User>

@{
    ViewBag.Title = "Список пользователей";
}

<h3>Список пользователей</h3>

<table class="table">
    @foreach (var user in Model)
    {
        <tr>
            <td>@user.Email</td>
            <td>
                <a class="btn btn-sm btn-warning" asp-action="Edit" asp-route-userid="@user.Id">Права доступа</a>
            </td>
        </tr>
    }
</table>
<a class="btn btn-outline-primary" asp-action="Index">Список ролей</a>