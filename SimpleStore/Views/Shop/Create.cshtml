@model SimpleStore.Models.Shop.Phone

@{
    ViewBag.Title = "Добавление товара";
}

<form method="post" asp-action="Create" asp-controller="Shop" enctype="multipart/form-data">
    <div class="form-group">
        <label asp-for="Name" class="control-label"></label><br />
        <input asp-for="Name" class="form-control" />
        <span asp-validation-for="Name"></span>
    </div>
    <div class="form-group">
        <label asp-for="Company" class="control-label"></label><br />
        <input asp-for="Company" class="form-control" />
        <span asp-validation-for="Company"></span>
    </div>
    <div class="form-group">
        <label asp-for="Price" class="control-label"></label><br />
        <input asp-for="Price" class="form-control" />
        <span asp-validation-for="Price"></span>
    </div>
    <div class="form-group">
        <label asp-for="Availability"></label><br />
        <select asp-for="Availability">
            <option value="В наличии">В наличии</option>
            <option value="Скоро будет в продаже">Скоро будет в продаже</option>
            <option value="Нет в наличии">Нет в наличии</option>
        </select>
        <span asp-validation-for="Availability"></span>
    </div>
    <div class="form-group">
        <label asp-for="File" class="control-label"></label><br />
        <input type="file" asp-for="File" class="form-control" />
    </div>
    <div class="form-group">
        <input type="submit" value="Добавить" class="btn btn-outline-secondary" />
    </div>
    <div>
        <a asp-action="Index">Назад</a>
    </div>
</form>