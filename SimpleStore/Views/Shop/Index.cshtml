
@{
    ViewBag.Title = "Все товары";
}

<h3 class="atten">SimpleStore - магазин телефонов и аксессуаров для них </h3>

@if (ViewBag.LastNews != null)
{
    <a class="news" asp-controller="News" asp-action="Show" asp-route-id="@ViewBag.LastNews.Id"><i><u>@ViewBag.LastNews.Message</u></i></a>
}


