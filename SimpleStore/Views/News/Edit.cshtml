@model SimpleStore.Models.Novelty

@{
    ViewBag.Title = "Редактирование новости";
}

<h3>Редактирование новости @Model.Title</h3>

<form asp-action="Edit" asp-controller="News">
    <div asp-validation-summary="ModelOnly"></div>
    <div>
        <input type="hidden" asp-for="Id" />
        <input type="hidden" asp-for="Date" value="@DateTime.Now" />
    </div>
    <div class="form-group col-md-5">
        <label asp-for="Title"></label><br />
        <input class="form-control" asp-for="Title" />
        <span asp-validation-for="Title"></span>
    </div>
    <div class="form-group col-md-5">
        <label asp-for="Message"></label><br />
        <textarea class="form-control" asp-for="Message"></textarea>
        <span asp-validation-for="Message"></span>
    </div>
    <div class="form-row">
        <div class="form-group col-md-2">
            <input class="btn btn-success form-control" type="submit" value="Сохранить" />
        </div>
        <div class="form-group col-md-2">
            <a class="btn btn-primary form-control" asp-action="Index">Назад</a>
        </div>
    </div>
</form>

@section scripts{
    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
}