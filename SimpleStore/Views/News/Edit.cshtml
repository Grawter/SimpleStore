@model SimpleStore.Models.Novelty

@{
    ViewBag.Title = "Редактирование новости";
}

<h3>Редактирование новости @Model.Title</h3>

<form asp-action="Edit" asp-controller="News">
    <div>
        <input type="hidden" asp-for="Id" />
        <input type="hidden" asp-for="Date" value="@DateTime.Now" />
    </div>
    <div>
        <label asp-for="Title"></label><br />
        <input class="col-3" asp-for="Title" />
        <span asp-validation-for="Title"></span>
    </div>
    <div>
        <label asp-for="Message"></label><br />
        <textarea class="textar" asp-for="Message"></textarea>
        <span asp-validation-for="Message"></span>
    </div>
    <div class="form-group">
        <input class="btn btn-success edit-btn" type="submit" value="Редактировать" />
        <a class="btn btn-primary edit-btn" asp-action="Index">Назад</a>
    </div>
</form>

@section scripts{
    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
}