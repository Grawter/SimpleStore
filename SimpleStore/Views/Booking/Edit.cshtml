@model SimpleStore.Models.Order

@{
    ViewBag.Title = "Редактирование заказа";
}

<h3>Редактирование заказа №@Model.Id</h3>

<form method="post" asp-controller="Booking" asp-action="Edit">
    <div asp-validation-summary="ModelOnly"></div>
    <input type="hidden" asp-for="Id" />
    <input type="hidden" asp-for="ProductId" />
    <input type="hidden" asp-for="UserId" />
    <input type="hidden" asp-for="ProductName" />
    <input type="hidden" asp-for="ProductCount" />
    <input type="hidden" asp-for="ProductPrice" />
    <div class="form-group col-md-5">
        <label asp-for="UserEmail"></label><br />
        <input class="form-control" asp-for="UserEmail" />
        <span asp-validation-for="UserEmail"></span>
    </div>
    <div class="form-group col-md-5">
        <label asp-for="UserPhone"></label><br />
        <input class="form-control" asp-for="UserPhone" />
        <span asp-validation-for="UserPhone"></span>
    </div>
    <div class="form-group col-md-5">
        <label asp-for="UserFullName"></label><br />
        <input class="form-control" asp-for="UserFullName" />
        <span asp-validation-for="UserFullName"></span>
    </div>
    <div class="form-group col-md-5">
        <label asp-for="UserAddress"></label><br />
        <textarea class="form-control" asp-for="UserAddress"></textarea>
        <span asp-validation-for="UserAddress"></span>
    </div>
    <div class="form-group col-md-5">
        <label asp-for="Status"></label><br />
        <select asp-for="Status">
            <option value="На рассмотрении">На рассмотрении</option>
            <option value="В сборке">В сборке</option>
            <option value="Отправлено">Отправлено</option>
            <option value="Исполнено">Исполнено</option>
            <option value="Отказано">Отказано</option>
        </select>
    </div>
    <div class="form-row">
        <div class="form-group col-md-2">
            <input class="btn btn-success form-control" type="submit" value="Сохранить" />
        </div>
        <div class="form-group col-md-2">
            <a class="btn btn-primary form-control" asp-action="Index">Назад</a>
        </div>
    </div>
</form>

@section scripts{
    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
}