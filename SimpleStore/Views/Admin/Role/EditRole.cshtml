@using Microsoft.AspNetCore.Identity
@model SimpleStore.ViewModels.Authorization.ChangeRoleViewModel

@{
    ViewBag.Title = "Назначение ролей";
}

<h3>Изменение ролей для пользователя @Model.UserEmail</h3>

<form method="post" asp-action="EditRole">
    <input type="hidden" name="userId" value="@Model.UserId" />
    
    <div class="form-group">
        @foreach (IdentityRole role in Model.AllRoles)
        {
            <input type="checkbox" name="roles" value="@role.Name" @(Model.UserRoles.Contains(role.Name) ? "checked=\"checked\"" : "") />@role.Name <br />
        }
    </div>

    <div class="form-row">
        <div class="form-group col-md-2">
            <button class="btn btn-success form-control" type="submit">Сохранить</button>
        </div>
        <div class="form-group col-md-2">
            <a class="btn btn-primary form-control" asp-action="Index">Назад</a>
        </div>
    </div>
    
</form>