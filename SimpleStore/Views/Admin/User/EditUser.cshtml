@model SimpleStore.ViewModels.Admin.AdmEditUserViewModel

@{
    ViewBag.Title = "Редактирование пользователя";
}

<h3>Редактирование данных пользователя @Model.Email</h3>

<form method="post" asp-action="EditUser" asp-route-ThisAdmAcc="@ViewBag.ThisAdmAcc">
    <div asp-validation-summary="ModelOnly">

    </div>
    <input type="hidden" asp-for="Id" />
    <div class="form-group col-md-5">
        <label asp-for="FullName"></label><br />
        <input class="form-control" asp-for="FullName" />
        <span asp-validation-for="FullName"></span>
    </div>
    <div class="form-group col-md-5">
        <label asp-for="Address"></label><br />
        <textarea class="form-control" asp-for="Address"></textarea>
        <span asp-validation-for="Address"></span>
    </div>
    <div class="form-group col-md-5">
        <label asp-for="PhoneNumber"></label><br />
        <input class="form-control" asp-for="PhoneNumber" />
        <span asp-validation-for="PhoneNumber"></span>
    </div>
    <div class="form-group col-md-5">
        <label asp-for="DateBirth"></label><br />
        <input class="form-control" type="date" asp-for="DateBirth" />
        <span asp-validation-for="DateBirth"></span>
    </div>
    <div class="form-group col-md-5">
        <label asp-for="Email"></label><br />
        <input class="form-control" asp-for="Email" />
        <span asp-validation-for="Email"></span>
    </div>
    <div class="form-row">
        <div class="form-group col-md-2">
            <input class="btn btn-success form-control" type="submit" value="Сохранить" />
        </div>
        <div class="form-group col-md-2">
            <a class="btn btn-primary form-control" asp-action="Index">Назад</a>
        </div>
    </div>
</form>