@model SimpleStore.ViewModels.Admin.AdmEditUserViewModel

@{
    ViewBag.Title = "Редактирование пользователя";
}

<h3>Редактирование данных пользователя @Model.Email</h3>

<form method="post" asp-action="EditUser" asp-route-ThisAdmAcc="@ViewBag.ThisAdmAcc">
    <div asp-validation-summary="All" class="text-danger"></div>
    <div class="form-group">
        <input type="hidden" asp-for="Id" />
    </div>
    <div>
        <label asp-for="FullName"></label><br />
        <input class="col-3" asp-for="FullName" />
        <span asp-validation-for="FullName"></span>
    </div>
    <div>
        <label asp-for="Address"></label><br />
        <textarea class="textar" asp-for="Address"></textarea>
        <span asp-validation-for="Address"></span>
    </div>
    <div>
        <label asp-for="PhoneNumber"></label><br />
        <input asp-for="PhoneNumber" />
        <span asp-validation-for="PhoneNumber"></span>
    </div>
    <div>
        <label asp-for="DateBirth"></label><br />
        <input type="date" asp-for="DateBirth" />
        <span asp-validation-for="DateBirth"></span>
    </div>
    <div>
        <label asp-for="Email"></label><br />
        <input class="col-3" asp-for="Email" />
        <span asp-validation-for="Email"></span>
    </div>
    <div class="form-group">
        <input class="btn btn-success edit-btn" type="submit" value="Сохранить" />
        <a class="btn btn-primary edit-btn" asp-action="Index">Назад</a>
    </div>
</form>