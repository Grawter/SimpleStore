@model SimpleStore.ViewModels.Admin.AdmCreateUserViewModel

@{
    ViewBag.Title = "Добавление пользователя";
}

<h3>Добавление пользователя</h3>

<form asp-action="CreateUser" asp-controller="Admin">
    <div asp-validation-summary="ModelOnly"></div>
    <div class="form-group col-md-5">
        <label asp-for="FullName"></label><br />
        <input class="form-control" asp-for="FullName" />
        <span asp-validation-for="FullName"></span>
    </div>
    <div class="form-group col-md-5">
        <label asp-for="Address"></label><br />
        <textarea class="form-control" asp-for="Address"></textarea>
        <span asp-validation-for="Address"></span>
    </div>
    <div class="form-group col-md-5">
        <label asp-for="PhoneNumber"></label><br />
        <input class="form-control" asp-for="PhoneNumber" />
        <span asp-validation-for="PhoneNumber"></span>
    </div>
    <div class="form-group col-md-5">
        <label asp-for="DateBirth"></label><br />
        <input class="form-control" type="date" asp-for="DateBirth" />
        <span asp-validation-for="DateBirth"></span>
    </div>
    <div class="form-group col-md-5">
        <label asp-for="Email"></label><br />
        <input class="form-control" asp-for="Email" />
        <span asp-validation-for="Email"></span>
    </div>
    <div class="form-group col-md-5">
        <label asp-for="Password"></label><br />
        <input class="form-control" asp-for="Password" />
        <span asp-validation-for="Password"></span>
    </div>
    <div class="form-row">
        <div class="form-group col-md-2">
            <input class="btn btn-success form-control" type="submit" value="Добавить" />
        </div>
        <div class="form-group col-md-2">
            <a class="btn btn-primary form-control" asp-action="Index">Назад</a>
        </div>
    </div>
  
</form>