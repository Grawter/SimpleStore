@model SimpleStore.ViewModels.Admin.AdmChangePassViewModel

@{
    ViewBag.Title = "Изменение пароля";
}

<h2>Изменение пароля для пользователя @Model.Email</h2>

<form asp-action="ChangePassword" asp-controller="Admin">
    <div asp-validation-summary="ModelOnly"></div>

    <input type="hidden" asp-for="Id" />
    <input type="hidden" asp-for="Email" />
    <div class="form-group col-md-4">
        <label asp-for="NewPassword" class="control-label"></label>
        <input type="text" asp-for="NewPassword" class="form-control" />
        <span asp-validation-for="NewPassword"></span>
    </div>
    <div class="form-row">
        <div class="form-group col-md-2">
            <input class="btn btn-success form-control" type="submit" value="Сохранить" />
        </div>
        <div class="form-group col-md-2">
            <a class="btn btn-primary form-control" asp-action="Index">Назад</a>
        </div>
    </div>
</form>