@model SimpleStore.ViewModels.Admin.AdmChangePassViewModel

@{
    ViewBag.Title = "Изменение пароля";
}

<h2>Изменение пароля для пользователя @Model.Email</h2>

<form asp-action="ChangePassword" asp-controller="Admin">
    <div asp-validation-summary="All" class="text-danger"></div>
    <input type="hidden" asp-for="Id" />
    <input type="hidden" asp-for="Email" />
    <div class="form-group">
        <label asp-for="NewPassword" class="control-label"></label>
        <input type="text" asp-for="NewPassword" class="form-control col-3" />
        <span asp-validation-for="NewPassword"></span>
    </div>
    <div class="form-group">
        <input class="btn btn-success" type="submit" value="Сохранить" />
        <a class="btn btn-primary" asp-action="Index">Назад</a>
    </div>
</form>