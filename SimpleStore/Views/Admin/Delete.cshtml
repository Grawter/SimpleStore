@model SimpleStore.Models.User

@{
    ViewBag.Title = "Удаление пользователя";
}

<h3>Вы уверены, что хотит удалить пользователя @Model.Email?</h3>

<form method="post" asp-controller="Admin" asp-action="Delete" asp-route-id="@Model.Id">
    <input type="submit" value="Удалить" class="btn btn-sm btn-danger" />
    <a asp-action="Index" asp-controller="Admin" class="btn btn-sm btn-secondary">Нет</a>
</form>