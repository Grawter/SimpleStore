@model SimpleStore.ViewModels.Admin.AdmCreateUserViewModel

@{
    ViewBag.Title = "Добавление пользователя";
}

<h3>Добавление пользователя</h3>

<form asp-action="Create" asp-controller="Admin">
    <div>
        <label asp-for="FullName"></label><br />
        <input asp-for="FullName" />
        <span asp-validation-for="FullName"></span>
    </div>
    <div>
        <label asp-for="Address"></label><br />
        <textarea asp-for="Address"></textarea>
        <span asp-validation-for="Address"></span>
    </div>
    <div>
        <label asp-for="PhoneNumber"></label><br />
        <input asp-for="PhoneNumber" />
        <span asp-validation-for="PhoneNumber"></span>
    </div>
    <div>
        <label asp-for="DateBirth"></label><br />
        <input type="date" asp-for="DateBirth" />
        <span asp-validation-for="DateBirth"></span>
    </div>
    <div>
        <label asp-for="Email"></label><br />
        <input asp-for="Email" />
        <span asp-validation-for="Email"></span>
    </div>
    <div>
        <label asp-for="Password"></label><br />
        <input asp-for="Password" />
        <span asp-validation-for="Password"></span>
    </div>
    <div class="form-group">
        <input class="btn btn-success" type="submit" value="Добавить" />
        <a class="btn btn-primary" asp-action="Index">Назад</a>
    </div>
</form>