@using SimpleStore.ViewModels.Supporting_tools
@addTagHelper *, SimpleStore
@model IndexViewModel

@{
    ViewBag.Title = "Админ-панель";
}

<a asp-action="Create" asp-controller="Admin" class="btn btn-outline-primary">Добавить пользователя</a>

<form method="get">
    <div class="form-inline form-group">
        <label class="control-label">Название:</label>
        <input name="name" class="form-control" />
        <input type="submit" value="Найти" class="btn btn-outline-dark" />
    </div>
</form>

<table class="table">
    <tr>
        <td>
            <a asp-action="Index" asp-controller="Admin"
               asp-route-sortOrder="@(Model.SortViewModel.EmailSort)"
               asp-route-email="@(Model.FilterViewModel.SelectedNameOrEmail)">Email ⇕</a>
        </td>
        <td>
            <a asp-action="Index"
               asp-route-sortOrder="@(Model.SortViewModel.PhoneSort)"
               asp-route-email="@(Model.FilterViewModel.SelectedNameOrEmail)">Номер ⇕</a>
        </td>
        <td>
            <a asp-action="Index"
               asp-route-sortOrder="@(Model.SortViewModel.NamesSort)"
               asp-route-email="@(Model.FilterViewModel.SelectedNameOrEmail)">Имя ⇕</a>
        </td>
        <td><a asp-action="Index"
               asp-route-sortOrder="@(Model.SortViewModel.SurnameSort)"
               asp-route-email="@(Model.FilterViewModel.SelectedNameOrEmail)">Фамилия ⇕</a>
        </td>
        <td></td>
    </tr>

    @foreach (var user in Model.Users)
    {
        <tr>
            <td>@user.Email</td>
            <td>@user.PhoneNumber</td>
            <td>@user.Name</td>
            <td>@user.Surname</td>
            <td>
                <a class="btn btn-sm btn-outline-info" asp-action="Edit" asp-route-id="@user.Id">Изменить</a>
                <a class="btn btn-sm btn-outline-warning" asp-action="ChangePassword" asp-route-id="@user.Id">Сменить пароль</a>
                <a class="btn btn-sm btn-outline-danger" asp-action="Delete" asp-route-id="@user.Id">Удалить</a>
            </td>
        </tr>
    }
</table>

<page-link page-model="Model.PageViewModel" page-action="Index"
           page-url-email="@(Model.FilterViewModel.SelectedNameOrEmail)"
           page-url-sortOrder="@(Model.SortViewModel.Current)">
</page-link>